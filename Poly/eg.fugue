fac n = if n == 0
	    then 1
		else n * fac (n - 1);

fib n = if n == 0
        then 1
		else if n == 1
		  then 1
		  else fib (n - 1) + fib (n - 2);
  
dot = ((.) . (.)) sum (zipWith (*));

sort xs =
  if null xs
  then []
  else let hd = head xs in
  	   let tl = tail xs in
	   let left = filter (\x -> x <= hd) tl in
	   let right = filter (\x -> x > hd) tl in
	   sort left ++ [hd] ++ sort right;
